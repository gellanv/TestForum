@model TestSaganenko.Models.Post

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this post?</h3>
<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TextPost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TextPost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatePost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePost)
        </dd>        
    </dl>    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Topic" asp-action="Details" asp-route-id=@Model.TopicId>Back to Topic</a>
    </form>
</div>
